%h2 Group Details

= simple_form_for @group, url: @group.persisted? ? group_path(@group) : groups_path  do |f|
  .form-group
    = f.input :name, input_html: {id: 'name', class: 'form-control'}, placeholder: 'Give Group Name'

  .form-group
    = f.input :mutant_ids, label: 'Mutants', collection: Mutants::Mutant.order(:name), label_method: :name, value_method: :id, include_blank: true, input_html: {id: 'mutants', multiple: 'multiple', class: 'form-control'}

  .form-group
    = f.label :tasks, 'Tasks'
    = link_to '[New Task]', new_task_path, remote: true, id: 'new_task_link'
    = f.input :task_ids, label: false, collection: Mutants::Task.order(:name), value_metho: :id, label_method: :name, include_blank: true, input_html: {id: 'tasks',   multiple: 'multiple', class: 'form-control'}

  = f.submit id: 'save_group', class: 'btn btn-default'