= render partial: 'group_actions'

- unless @groups.blank?
  %table#group_list
    %thead
      %tr
        %th ID
        %th Name
        %th Mutants
        %th Tasks
        %th
    %tbody
      - @groups.each do |g|
        %tr
          %td= g.id
          %td= link_to g.name, edit_group_path(g)
          %td
            Mutants
            %span#number_of_mutants= g.mutants.count
          %td
            Tasks
            %span#number_of_tasks= g.tasks.count
          %td= link_to 'Delete', group_path(g), id: "group_delete_action_#{g.id}", name: 'delete-task', method: 'delete', data: {confirm: 'Are you sure that you want to delete this Group?'}
