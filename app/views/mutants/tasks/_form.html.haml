- unless request.xhr?
  %h2 Task Details

- remote = request.xhr?

= simple_form_for @task, url: @task.persisted? ? task_path(@task) : tasks_path, html: {id: 'task_form'}, remote: remote, 'data-type' => :html do |f|
  .form-group
    = f.input :name, input_html: {id: 'task_name', class: 'form-control'}, placeholder: 'Give Task Name'
  = f.submit id: 'save_task', class: 'btn btn-default'
  #create_task_submit_loader{class: 'preloader_hidden'}
    = image_tag 'preloader-small.gif'